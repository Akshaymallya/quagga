/var/log/quagga/*.log {
        daily
        rotate 5
        sharedscripts
        missingok
        compress
        create 640 quagga quaggavty

        postrotate
		for daemon in zebra bgpd ripd ospfd ripngd ospf6d isisd; do
                        if [ -e /var/run/quagga/$daemon.pid ] ; then
				kill -USR1 `cat /var/run/quagga/$daemon.pid`
                        fi

                done
        endscript
}
