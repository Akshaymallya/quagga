/var/log/vyatta/*.log {
        daily
        sharedscripts
        missingok
        compress
        rotate 14
        create 640 quagga quaggavty

        postrotate
		for i in zebra bgpd ripd ospfd ripngd ospf6d isisd; do
                        if [ -e /var/run/vyatta/$i.pid ] ; then
				kill -USR1 `cat /var/run/vyatta/$i.pid`
                        fi

                done
        endscript
}
